{
   "build": {
      "beforeDevCommand": "yarn dev",
      "beforeBuildCommand": "yarn build",
      "devPath": "http://localhost:1420",
      "distDir": "../dist"
   },
   "package": {
      "productName": "ferisNotes",
      "version": "0.0.2"
   },
   "tauri": {
      "allowlist": {
         "all": true,
         "fs": {
            "all": true,
            "scope": ["**"]
         }
      },
      "bundle": {
         "active": true,
         "category": "DeveloperTool",
         "copyright": "",
         "deb": {
            "depends": []
         },
         "externalBin": [],
         "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
         "identifier": "com.feris.io",
         "longDescription": "",
         "macOS": {
            "entitlements": null,
            "exceptionDomain": "",
            "frameworks": [],
            "providerShortName": null,
            "signingIdentity": null
         },
         "resources": [],
         "shortDescription": "Simple notes app",
         "targets": "all",
         "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": ""
         }
      },
      "security": {
         "csp": null
      },
      "updater": {
         "active": false
      },
      "windows": [
         {
            "fullscreen": false,
            "height": 700,
            "resizable": true,
            "title": "ferisNotes",
            "width": 700,
            "center": true
         }
      ]
   }
}
